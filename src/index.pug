  title Queue Simulation
#main-container
  #top-container
    #player.round-container
      #play-button.p-button.round-container
        i.fas.fa-play
      #pause-button.p-button.round-container
        i.fas.fa-pause
      #stop-button.p-button.round-container
        i.fas.fa-stop
    #timer.round-container
      label Tiempo:
      #timer-label.round-container 00:00:00
  #middle-container
    #m-slider-container
      #slider-container.round-container
        #frequency-slider.multi-slider(min='0' max='100')
    #left-container
      #info-container-row
        #operations
      #sliders.round-container
        .slider-container
          label(for='mean-slider') &mu;:
          input#mean-slider.slider(type='range' name='mean-slider' min='30' max='300' value='75' step='1')
          span#mean-value 00:01:15
        .slider-container
          label(for='dev-slider') &sigma;:
          input#dev-slider.slider(type='range' name='dev-slider' min='1' max='150' value='8' step='1')
          span#dev-value 00:00:08
      #chart.round-container
